<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E4D4D"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<!--    <androidx.appcompat.widget.Toolbar-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="?attr/actionBarSize"-->
<!--        android:id="@+id/toolbar"-->
<!--        app:title="IReduce"-->
<!--        android:background="#0C90CE"-->
<!--        app:titleTextColor="@android:color/white"-->
<!--        />-->
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#4E4D4D"
        >

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:src="@drawable/ic_baseline_photo_24"
        android:background="#4E4D4D"

        />

        <Button
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add photo"
            android:background="@drawable/button_bg"
            />

    <TextView
        android:visibility="gone"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size of the image is:"
        android:textSize="@dimen/_15ssp"
        android:textColor="#0C90CE"
        />



<EditText
    android:visibility="gone"
    android:padding="@dimen/_5sdp"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:id="@+id/et_compress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/et_bg"
    android:hint="Enter the size to compress"
    />
    <Button
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:background="@drawable/button_bg"
        android:onClick="compress"
        android:id="@+id/btn_compress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="compress"
        />
    </LinearLayout>
</LinearLayout>
</ScrollView>